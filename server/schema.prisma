generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Topic { 
  id Int @id @default(autoincrement())
  name String
  headers TopicHeader[]
}

model TopicHeader { 
  id Int @id @default(autoincrement())
  topicId Int @unique
  settings Json 
  topic Topic @relation(fields: [topicId], references: [id])
}
